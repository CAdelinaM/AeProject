extends ../layout.pug

block content 
  form.form.center-form(method='post')
    div.text-desc
      h2(style="text-align:center; padding-top:30px;") Login
      .form-group
        label(for='username') Username
        input#username.input-field(name='username', type='text')
      .form-group
        label(for='password') Password
        input#password.input-field(name='password', type='password')
     
      .form-group
        input.form-btn.btn(type='submit', value='Login')
